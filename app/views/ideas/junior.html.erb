<style type="text/css">
  <%= Rails.application.assets.find_asset('ideas.css').to_s.html_safe %>
</style>     

<style type="text/css">
  <%= Rails.application.assets.find_asset('bootstrap.css').to_s.html_safe %>
</style>     

<div class="container-fluid">

<% flash.each do |key, value| %>
        <div class="alert alert-success" role="alert"><%= notice %></div>
<% end %>

<%#= link_to '修改', edit_idea_path(@idea) %> 
<%#= link_to '返回', current_user %> 
<%#= link_to '关联', share_path(@idea) %> 
<%#= link_to '点评', {:controller =>"comments", :action =>"new",:linkidea_id=>@idea.id} %>

<div class="user-share-part">

<h1><%= @idea.name %>
  
</h1>
<small><%= @idea.intro %></small>

<%= link_to '返回产品通用页面', @idea,class:"btn btn-lg btn-info" %>  

<% if current_user.id == ideaowner(@idea).user_id %>
      <%= link_to '更新通知', updatejuniorpartner_path(@idea),class:"btn btn-lg btn-primary"%>
<% end %>


</div>

<div class="ideas-list">

<%#= render :partial=>"kuailvindex",:locals=>{:teasersets=>Teaserset.all} %>

<h1>用户推广 </h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>序号</th>
      <th>初级合伙人-inviteid</th>
      <th>种子用户email</th>
    </tr>
  </thead>

  <tbody>
    <% i=1 %>
    <% Teaserset.all.each do |teaserset| %>
      <% if(!teaserset.email.blank?)  %>
        <tr>
          <td><%= i %></td>
          <td><%= teaserset.inviter_id %></td>
          <td><%= teaserset.email %></td>
        </tr>
        <% i=i+1 %>
     <% end %>
    <% end %>
  </tbody>
</table>


</div>
</div>





