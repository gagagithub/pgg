<h1>Ideas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Intro</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.intro %></td>
        <td><%= link_to 'Show', idea %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Idea', new_idea_path %>
