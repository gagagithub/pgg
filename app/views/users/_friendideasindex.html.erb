<% if uishipreviewers.empty? %>

<p>没有朋友邀请您，：（</p>

<% else %>

<table class="table table-striped">
  <thead>
    <tr>
      <th class="idea-table-id"><p>#</p></th>
      <th class="idea-table-name"><p>创意名称<p></th>
      <th class="idea-table-intro"><p>简介</p></th>
      <th class="idea-table-oper"><p>操作</p></th>

    </tr>
  </thead>

  <tbody>
    <% i=1 %>
    <% uishipreviewers.each do |uishipreviewer| %>
      <tr>
        <td class="idea-table-id"><%= i %></td>
        <td><%= link_to uishipreviewer.idea.name,uishipreviewer.idea %></td>
        <td><%= uishipreviewer.idea.intro %></td>
        <td><%= link_to '详情', uishipreviewer.idea %></td>
      </tr>
      <% i=i+1 %>
    <% end %>
  </tbody>
</table>


<% end %>
