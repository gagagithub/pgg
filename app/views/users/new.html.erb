  <div class="container-fluid">  

    <div class= "page-keypart">
      <h1>注册</h1>
    </div>

    <div class= "page-content">

        <%= bootstrap_form_for(@user) do |f| %>

        <%= render 'shared/error_messages' %>

        <%= f.hidden_field :invitation_id %>
        
        <%= f.text_field :name,label:"用户名" %>

        <%= f.email_field :email,label:"电子邮件" %>

        <%= f.password_field :password, label:"密码" %>

        <%= f.password_field :password_confirmation, label:"确认密码" %>

        <%= f.primary " 注册 " %>
      <% end %>


    </div>

  </div>




