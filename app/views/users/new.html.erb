<h1>注 册</h1>



    <%= form_for(@user) do |f| %>

      <%= render 'shared/error_messages' %>

      <%= f.hidden_field :invitation_token %>
      
      <%= f.label :姓名 %>
      <%= f.text_field :name %>

      <%= f.label :电子邮箱 %>
      <%= f.text_field :email %>

      <%= f.label :密码 %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "密码确认" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "创建账号" %>
    <% end %>
