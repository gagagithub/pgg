<h1>Sign in</h1>

<div class = "container">

	<%= form_tag sessions_path do %>

		<%= label_tag :email %><br />
		<%= text_field :email, params[:email] %><br />

		<%= label_tag :password %><br />
		<%= password_field_tag :password %>

		<%= submit_tag("Sign in") %>

	<% end %>

	<p> New user? <%= link_to "Sign up now!", signup_path %></p>
</div>
